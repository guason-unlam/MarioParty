		setTitle("JButtonTextChange Test");
	      setLayout(new FlowLayout());
		textTirarDado = new JTextField(2);
		tirarDado = new JButton("Tirar Dado");
		tirarDado.addActionListener(new ActionListener() {
			public void actionPerformed(ActionEvent ae) {
				if (!textTirarDado.getText().equals("")){
					tirarDado.setText(textTirarDado.getText());
					String aux = textTirarDado.getText();
					KeyStroke ks = KeyStroke.getKeyStroke(aux.charAt(0));
					tirarDadoId = ks.getKeyCode();
				}
			}
		});
		add(textTirarDado);
	      add(tirarDado);
	     
	      
	      
	  	textPasar = new JTextField(2);
		pasar = new JButton("Pasar");
		pasar.addActionListener(new ActionListener() {
			public void actionPerformed(ActionEvent ae) {
				if (!textPasar.getText().equals("")){
					pasar.setText(textPasar.getText());
					String aux = textPasar.getText();
					KeyStroke ks = KeyStroke.getKeyStroke(aux.charAt(0));
					pasarId = ks.getKeyCode();
				}
			}
		});
		add(textPasar);
	      add(pasar);
	      
	      
	      
	    textUsarItem = new JTextField(2);
		usarItem = new JButton("Usar Item");
		usarItem.addActionListener(new ActionListener() {
			public void actionPerformed(ActionEvent ae) {
				if (!textUsarItem.getText().equals("")){
					usarItem.setText(textUsarItem.getText());
					String aux = textUsarItem.getText();
					KeyStroke ks = KeyStroke.getKeyStroke(aux.charAt(0));
					usarItemId = ks.getKeyCode();
				}
			}
		});
		add(textUsarItem);
	      add(usarItem);

		setSize(400, 300);
		setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
		setLocationRelativeTo(null);
		setVisible(true);
		
		
		}
	
	public static int getIdLanzarDado(){
		return tirarDadoId;
	}
  
		public static int getPasarId() {
		return pasarId;
	}

	public static int getUsarItemId() {
		return usarItemId;
	}
}

	
	
	
